{
  "manifest_version": 2,
  "name": "SpotiShush",
  "version": "2018.6.19",
  "default_locale": "en",
  "description": "__MSG_ext_desc__",
  "icons": {
    "16": "img/spotishush16.png",
    "48": "img/spotishush48.png",
    "128": "img/spotishush128.png"
  },
  "author": "guihkx",
  "background": {
    "persistent": true,
    "scripts": [
      "browser-polyfill.min.js",
      "utils.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "utils.js",
        "spotishush.js"
      ]
    }
  ],
  "permissions": [
    "https://open.spotify.com/*",
    "tabs"
  ]
}
